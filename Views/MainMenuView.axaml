<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TractNote.MainMenuView">
	<Border Margin="120,60,120,20">
		<StackPanel HorizontalAlignment="Stretch">

			<TextBlock>
			</TextBlock>

			<Grid Name="GridFileSelector" ColumnDefinitions="*, *" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,0,0">

				<Border Grid.Column="0" Background="#0AFFFFFF" Margin="0,0,10,0" CornerRadius="10" Padding="10,5,10,5">
					<StackPanel Name="recentFiles">
						<ItemsControl ItemsSource="{Binding Files}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Button Content="{Binding FileName}"
											Tag ="{Binding FullPath}"
											Margin="5"
											HorizontalAlignment="Stretch"
											Height="40"
											Padding="10"
											Click="RenderDb">
									</Button>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
					</StackPanel>
				</Border>

				<Border Grid.Column="1" Background="#0AFFFFFF" Margin="0,0,10,0" CornerRadius="10" Padding="10,5,10,5">
					<StackPanel>
						<Button	Content="Add"
								Margin="5"
								HorizontalAlignment="Stretch"
								Height="40"
								Padding="10"
								Click="SaveFileButton_Clicked"/>
					</StackPanel>
				</Border>

			</Grid>
		</StackPanel>
	</Border>
</UserControl>
