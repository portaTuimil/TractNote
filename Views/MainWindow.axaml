<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TractNote.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:TractNote.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TractNote.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
		Background="#191919"
        Title="TractNote"
		Name="MainContent">

	<Border Margin="120,60,120,20">
		<StackPanel HorizontalAlignment="Stretch">

			<TextBlock>
				Dashboard
			</TextBlock>

			<Grid Name="GridFileSelector" ColumnDefinitions="*, *" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,0,0">

				<Border Grid.Column="0" Background="#0AFFFFFF" Margin="0,0,10,0" CornerRadius="10" Padding="10,5,10,5">
					<StackPanel Name="recentFiles">
						<ItemsControl ItemsSource="{Binding FileTitles}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Button Content="{Binding .}"
											Margin="5"
											HorizontalAlignment="Stretch"/>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
					</StackPanel>
				</Border>

				<Border Grid.Column="1" Background="#0AFFFFFF" Margin="0,0,10,0" CornerRadius="10" Padding="10,5,10,5">
					<StackPanel>
						
					</StackPanel>
				</Border>

			</Grid>
		</StackPanel>
	</Border>
</Window>
